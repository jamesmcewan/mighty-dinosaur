---
import GridBlock from "@/components/block/grid-block.astro"
import ImageBlock from "@/components/block/image-block.astro"
import StegoBlock from "@/components/block/stego-block.astro"

const defaultImages = ["mighty"]
const { images = defaultImages } = Astro.props
---

<GridBlock extendClass="grid-cols-2 md:grid-cols-1">
  {
    images.map((image: string) => (
      <ImageBlock src={`https://img.mightydinosaur.dev/${image}.webp`} alt={image} />
    ))
  }
  <StegoBlock />
</GridBlock>
