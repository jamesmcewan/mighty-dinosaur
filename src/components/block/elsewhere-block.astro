---
import { getCollection } from "astro:content"
import LinkBlock from "@/components/block/link-block.astro"
import SectionHeadingBlock from "@/components/block/section-heading-block.astro"

const elsewhere = await getCollection("elsewhere")
---

<section>
  <SectionHeadingBlock>Where to find me</SectionHeadingBlock>
  <ul class="grid gap-4 lg:grid-cols-2">
    {
      elsewhere.map((link) => (
        <li>
          <LinkBlock
            href={link.data.url}
            rel="me"
            color="text-tn-orange/80"
            hover="hover:text-tn-orange"
          >
            {link.data.id} / {link.data.handle}
          </LinkBlock>
        </li>
      ))
    }
  </ul>
</section>
