---
import siteConfig from '@/data/site-config'
export interface Props {
  title: string
  description: string
  url: string
}

const { title, description, url } = Astro.props
const { image, title: siteName, elsewhere } = siteConfig
const mastoItem = elsewhere.find((item) => item.service === 'masto')
const mastoUrl = mastoItem ? mastoItem.url : null
---

<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={image} />
<meta property="og:url" content={url} />
<meta property="og:type" content="website" />
<meta property="og:site_name" content={siteName} />
<meta name="twitter:card" content="summary_large_image" />
<meta property="twitter:domain" content="mightydinosaur.dev" />
<meta property="twitter:url" content={url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={image} />
<link rel="me" href={mastoUrl} />
